@model Product

<div asp-validation-summary="All">
    
</div>

<form asp-action="CreateProduct" asp-controller="Product" method="post">
    <input type="number" asp-for="Id" placeholder="ProductId"/>
    <span asp-validation-for="Id"></span>
    <br />
    <input type="text" asp-for="Name" placeholder="ProductName"/> 
    <span asp-validation-for="Name"></span>
    <br />
    <input  type="text" asp-for="Category" placeholder="ProductCategory"/>
    <span asp-validation-for="Category"></span>
    
    <button>Press the button.</button>
</form>



